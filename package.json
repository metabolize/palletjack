{
  "name": "palletjack",
  "description": "Pack up files for distribution using a manifest file of glob patterns and a gitignore",
  "keywords": [
    "glob",
    "manifest",
    "pack",
    "archive",
    "distribution"
  ],
  "version": "0.3.1",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "del dist/",
    "build": "tsc",
    "postbuild": "shebang-trim dist/cli.js",
    "predev": "del dist/",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit --project .",
    "mocha": "ts-mocha --project tsconfig.json \"src/**/*.spec.ts\"",
    "lint": "eslint \"**/*.ts\"",
    "prettier:check": "prettier --check \"**/*.@(ts|js|yml|md|json)\"",
    "prettier": "prettier --write \"**/*.@(ts|js|yml|md|json)\"",
    "test": "run-p --continue-on-error check-types mocha lint prettier:check",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*.@(js|ts|map)"
  ],
  "repository": "metabolize/palletjack",
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "@types/argparse": "^1.0.36",
    "@types/fs-readfile-promise": "^3.0.0",
    "@types/hapi__joi": "^15.0.1",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.6.2",
    "@types/tmp": "^0.1.0",
    "argparse": "^1.0.9",
    "betterset": "^2.0.1",
    "del": "^5.0.0",
    "globby": "^10.0.1",
    "js-yaml": "^3.13.1",
    "multimatch": "^4.0.0",
    "parse-gitignore": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chai": "^4.2.0",
    "del-cli": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "shebang-trim": "^0.1.0",
    "tmp-promise": "^2.0.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "engines": {
    "node": ">= 10.x"
  }
}
